<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Golden Retriver"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:id="@+id/name_text_view"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/download"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name_text_view"
        android:id="@+id/dog_detail_image_view" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dog_detail_image_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="italic"
        android:text="temperament:"
        android:textSize="20dp"
        android:id="@+id/temperament_text_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temperament_text_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="life span"
        android:textSize="30dp"
        android:textStyle="italic"
        android:id="@+id/life_span_text_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/life_span_text_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Origin"
        android:textSize="30dp"
        android:textStyle="italic"
        android:id="@+id/weight_text_view"/>


</RelativeLayout>